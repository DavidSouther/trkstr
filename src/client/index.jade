doctype html5
html(lang='en', ng-app='trkstr', ng-stict-di)
  head(ng-controller='HeadCtrl')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    title {{ title }}

    link(rel='stylesheet', href='vendors.css')

    link(rel='stylesheet', href='/all.css')
    link(rel='stylesheet', href='/screen.css', media="screen")
    link(rel='stylesheet', href='/print.css', media="print")

    script(src="vendors.js")

    //- Comment below to disable real-time sockets.
    script(src="socket.io/socket.io.js")

  body(layout="row", ng-controller="AppCtrl")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(
      layout="column"
      md-component-id="mainmenu"
      md-is-locked-open="$media('md')"
    )
      md-toolbar.md-medium-tall.md-default-theme
        h1.md-toolbar-tools
          a(href, ng-click="goHome()") TrkStr
   
    div(
      layout="column"
      layout-fill
    )
      md-toolbar.md-medium-tall.md-default-theme
        .md-toolbar-tools(ng-click="toggleMenu()")
          button.menu-icon
            md-icon(icon="img/icons/ic_menu_24px.svg")
        player
    
      //- ui-view(name="content")
      md-content
        library

    //- Uncomment below for cordova Mobile support
    //- script(src="cordova.js")

    script(src="templates.js")
    script(src="application.js")
